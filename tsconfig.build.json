{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./",
    "declaration": true,
    "importHelpers": true
  },
  "exclude": [
    "**/__test__/*",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/examples/*",
    "src/svg/*"
  ],
  "include": ["src"]
}
