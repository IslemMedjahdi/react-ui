{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "esm",
    "declaration": true
  },
  "exclude": [
    "**/__test__/*",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/examples/*",
    "src/svg/*"
  ],
  "include": [
    "src"
  ]
}
