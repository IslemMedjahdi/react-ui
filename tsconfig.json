{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "**/__test__/*",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/examples/*"
  ],
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
